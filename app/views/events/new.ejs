<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create Event</title>
    <link rel="stylesheet" href="/stylesheets/DateTimePicker.css">
    <link rel="stylesheet" href="/stylesheets/simple-grid.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/event.css">
    <script src="/js/jquery-3.1.1.min.js" charset="utf-8"></script>
    <script src="/js/DateTimePicker.js" charset="utf-8"></script>
  </head>
  <body>
    <% include ../layouts/header %>
    <% include ../layouts/message %>
    <div class="main-container">

    <div id="new-event-container">
      <h1>Create an Event</h1>

      <form action="/events/create" method="post" id="">
        <label for="title">Title</label>
        <input type="text" name="title" value="">
        <label for="description">Description</label>
        <textarea rows="10" cols="" name="description" value="" id="description_input"></textarea>
        <label for="location">Location</label>
        <input type="text" name="location" value="">
        <label for="date">Date</label>
        <input type="text" data-field="datetime" name="date" readonly>
        <input type="submit" name="" value="Create Event" id="new-event-button">
        <div id="dtBox"></div>

      </form>
    </div>

  </div>
  </body>

</html>

<script type="text/javascript">
$(document).ready(function()
{

  $("#dtBox").DateTimePicker(
    {
      dateTimeFormat: 'MM-dd-yyyy hh:mm AA'
    }
  );

});
</script>
