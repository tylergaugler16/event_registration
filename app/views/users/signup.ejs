<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Signup</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body class="church-background">
    <% include ../layouts/header %>
    <% include ../layouts/message %>
    <div class="main-container">

      <div id="signup-container">
        <h1>Signup!</h1>
        <form class="" action="/users/signup" method="post">
          <div class="signup-input-container">
            <label for="firstname">First Name</label>
            <input type="text" name="firstname" value="" required>
            <label for="lastname">Last Name</label>
            <input type="text" name="lastname" value="" required>
          </div>
          <div class="signup-input-container">

          </div>
          <div class="signup-input-container">
            <label for="email">Email</label>
            <input type="text" name="email" value="" required>
            <label for="password">Password</label>
            <input type="password" name="password" value="" required>
          </div>
          <div class="signup-input-container">

          </div>
          <div class="signup-input-container">
            <label for="church">Church/Place of Worship You Attend(Optional)</label>
            <input type="text" name="church" value="">
          </div>
          <div class="signup-input-container">
            <label for="address">Address</label>
            <input type="text" name="address" value="" required>
            <label for="city">City</label required>
            <input type="text" name="city" value="" required>

          </div>
          <div class="signup-input-container">
            <label for="zip_code">Zip Code</label>
            <input type="text" name="zip_code" value="" required>
          </div>
          <div class="signup-input-container">
            <label for="phone_number">Phone Number</label>
            <input type="text" name="phone_number" value="" required>
          </div>
          <div class="signup-input-container">
            <label for="satus">Status</label>
            <select name="status">
              <option value="parent">Parent</option>
              <option value="helper">Staff</option>
            </select>

          </div>
          <div class="signup-input-container">
            <input type="submit" name="" value="Create New User" id="submit_button">
          </div>
        </form>
      </div>




    </div>
  </body>
</html>
